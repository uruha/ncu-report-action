{
  "name": "ncu-report-action",
  "version": "1.0.0",
  "description": "npm check updates PR reporter",
  "main": "lib/index.js",
  "scripts": {
    "type:check": "tsc -p . --noEmit",
    "lint:check": "eslint . --ext .ts",
    "lint:fmt": "eslint . --fix --ext .ts",
    "build": "tsc -b tsconfig.json src/index.ts",
    "exec": "node lib/index.js",
    "exec:direct": "ts-node src/index.ts",
    "package": "ncc build --source-map",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --ext .ts --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uruha/dev-gh-actions.git"
  },
  "keywords": [
    "github-actions",
    "typescript",
    "docker"
  ],
  "author": "chiba-kotaro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uruha/dev-gh-actions/issues"
  },
  "homepage": "https://github.com/uruha/dev-gh-actions#readme",
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "npm-check-updates": "^7.1.1",
    "typescript": "^4.0.2"
  }
}
